from multiprocessing import Process 
import errno 
import socket
import math 
import sys
import time


print(r"""

   WELCOME TO ONLINE CALCULATOR PYTHON 2021 ^$^

               """)

def Log(a):
	print(f"[*]Calculating log({a})")
	a = int(a)
	try:
		answer = math.log(a)
	except:
		answer = "Unable to be calculated! Please retry again.."

	return answer

def Sqrt(a):
	print(f"[*]Calculating square root of {a}")
	a = int(a)
	if(a >= 0):
		try:
			answer = math.sqrt(a)
		except:
			answer = "Unable to be calculated! Please retry again.."
	else:
		answer = "Unable to be calculated! Cannot negative value!"

	return answer

def Exp(a):
	print(f"[*]Calculating exponential of {a}")
	a = float(a)
	try:
		answer = math.exp(a)
	except:
		answer = "Unable to be calculated! Please retry again.."

	return answer


def process_start(s_sock):
	s_sock.send(str.encode('Connection is successful!!!\n'))
	while True:
		data = s_sock.recv(2048)
	
		data = data.decode('utf-8')
		try:
			option, number = data.split(" ", 2)
		except:
			print("Unable to calculate! Client disconnected...\n")
		
		if not data:
			break
        
		if(option == '1'): #log
			answer = Log(number)
		elif(option == '2'): #sqrt
			answer = Sqrt(number)
		elif(option == '3'):  #exp
			answer = Exp(number)

		message = "The answer is  %s." % str(answer)
		print("[*]Completed!!!\n****************************************\n")
		s_sock.sendall(str.encode(message))

		
	s_sock.close()

if __name__ == '__main__':
	s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
	s.bind(("", 8888))
	print("Receiving input from clients...")
	s.listen(3)
	try:
		while True:
			try:
				s_sock, s_addr = s.accept()
				p = Process(target = process_start, args = (s_sock,))
				p.start()

			except socket.error:
				print('Socket error!')

	except Exception as f:
		print('An exception occured!')
		print(f) 
		sys.exit(1)

	finally:
		s.close()
